{
  "name": "custom-flow",
  "displayName": "流式处理",
  "description": "一个允许用户自定义操作流，流式处理文本的 VSCode 插件。",
  "publisher": "svenzhao",
  "icon": "images/logo.png",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "flow",
    "tools"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "customFlow.execute",
        "key": "ctrl+shift+cmd+x",
        "mac": "cmd+shift+ctrl+x"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "customFlow.operations": {
          "type": "array",
          "description": "用户自定义操作流程的列表，每个操作包括一个名称和一系列步骤。",
          "default": [
            {
              "name": "3px",
              "steps": [
                {
                  "name": "divide",
                  "params": 3
                },
                {
                  "name": "multiply",
                  "params": 2
                }
              ],
              "resultAction": "replace"
            },
            {
              "name": "sting:转换成大写",
              "steps": [
                {
                  "name": "toUpperCase",
                  "params": {}
                }
              ]
            },
            {
              "name": "sting:字符串反转",
              "steps": [
                {
                  "name": "reverse",
                  "params": {}
                }
              ],
              "resultAction": "replace"
            },
            {
              "name": "code：Base64 编码",
              "steps": [
                {
                  "name": "base64encode",
                  "params": {}
                }
              ],
              "resultAction": "replace"
            },
            {
              "name": "code：Base64 解码",
              "steps": [
                {
                  "name": "base64decode",
                  "params": {}
                }
              ],
              "resultAction": "replace"
            },
            {
              "name": "time：秒转毫秒",
              "steps": [
                {
                  "name": "dateToTimestamp",
                  "params": {
                    "unit": "s"
                  }
                }
              ],
              "resultAction": "replace"
            },
            {
              "name": "time：时间戳（秒）转换为日期",
              "steps": [
                {
                  "name": "timestampToDate",
                  "params": {
                    "unit": "s",
                    "format": "YYYY-MM-DD"
                  }
                }
              ],
              "resultAction": "replace"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "操作名称，选择预定义的操作类型。"
              },
              "needSelect": {
                "type": "boolean",
                "description": "是否需要选中文案 默认为 true",
                "default": true
              },
              "steps": {
                "type": "array",
                "description": "操作的步骤，每个步骤包含名称和可选参数。",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "步骤方法名称 例如 multiply。去文档查看可用的步骤方法。"
                    },
                    "params": {
                      "type": [
                        "object",
                        "string",
                        "boolean",
                        "number"
                      ],
                      "description": "步骤所需的参数，例如 'multiply' 步骤中，输入 3 表示乘以 3。"
                    }
                  },
                  "required": [
                    "name"
                  ]
                }
              },
              "resultAction": {
                "type": "string",
                "enum": [
                  "clipboard",
                  "replace"
                ],
                "default": "replace",
                "description": "操作完成后的结果动作，'clipboard' 或 'replace'。"
              }
            },
            "required": [
              "name",
              "steps"
            ]
          }
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "customFlow.execute",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "customFlow.execute",
        "title": "执行流式处理",
        "category": "CustomFlow"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SvenZhao/custom-flow"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "docs": "typedoc --out docs/ src/operations/*.ts",
    "release": "standard-version",
    "publish": "npm run release && vsce publish"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "@types/vscode": "^1.50.0",
    "ts-loader": "^9.5.1",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "lodash": "^4.17.21",
    "standard-version": "^9.5.0"
  }
}
