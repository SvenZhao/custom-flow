{
  "name": "custom-flow",
  "displayName": "流式处理",
  "description": "一个允许用户自定义操作流，流式处理文本的 VSCode 插件。",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "customFlow.execute",
        "key": "ctrl+shift+cmd+x",
        "mac": "cmd+shift+ctrl+x"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "customFlow.operations": {
          "type": "array",
          "description": "用户自定义操作流程的列表，每个操作包括一个名称和一系列步骤。",
          "default": []
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "customFlow.execute",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "customFlow.execute",
        "title": "执行流式处理",
        "category": "CustomFlow"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "@types/vscode": "^1.95.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
